[
    {
        "name" : "${app_name}",
        "image": "${worker_image}",
        "essential": true,
        "portMappings": [
            {
                "containerPort": ${worker_port},
                "hostPort": ${worker_port}
            }
        ],
        "cpu": ${cpu},
        "memory": ${memory},
        "networkMode": "awsvpc",
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group}",
                "awslogs-region": "${aws_region}",
                "awslogs-stream-prefix": "ecs-worker"
            }
        }
    }
]
